<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:text="Register"
            android:textSize="25sp"
            android:textStyle="bold" />



        <EditText
            android:id="@+id/username"
            android:layout_width="362dp"
            android:layout_height="47dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_below="@id/Title"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edittext_bg"
            android:hint="Username"/>



        <EditText
            android:id="@+id/email"
            android:layout_width="362dp"
            android:layout_height="47dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="true"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext_bg"
            android:hint="Email" />



        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="362dp"
            android:layout_height="47dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:inputType="number"
            android:background="@drawable/rounded_edittext_bg"
            android:hint="Phone"/>



        <EditText
            android:id="@+id/password"
            android:layout_width="362dp"
            android:layout_height="47dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/phoneNumber"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edittext_bg"
            android:hint="Password"
            android:inputType="textPassword"/>

        <CheckBox
            android:id="@+id/Checks"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_centerHorizontal="false"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="12dp"
            android:text="By checking the box you agree tu our"
            android:textColorLink="@color/highlight"
            android:textSize="8sp" />



        <Button
            android:id="@+id/btnToSecond"
            android:layout_width="362dp"
            android:layout_height="47dp"
            android:backgroundTint="@color/highlight"
            android:text="Register"
            android:layout_below="@id/Checks"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <TextView

            android:id="@+id/Already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnToSecond"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Alredy Have an Account?"
            android:textSize="8sp" />

        <Button
            android:id="@+id/logInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnToSecond"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="-29dp"
            android:layout_toRightOf="@id/Already"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:padding="0dp"
            android:shadowColor="@color/white"
            android:text="Log In"
            android:textColor="@color/highlight"
            android:textSize="8sp" />

    </LinearLayout>
</FrameLayout>
